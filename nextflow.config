/*
 * ViralQC Benchmark Pipeline Configuration
 */

// Pipeline parameters
params {
    // Required parameters (no defaults)
    input = null
    datasets_dir = null
    

    // ViralQC parameters
    viralqc {
        blast_task = "megablast"
        blast_qcov = 80
        blast_pid = 80
    }
    
    // Resource configuration
    cpus = 1
    memory = 2  // in GB
}

// Process configuration
process {
    container = 'viralqc:latest'
    shell = ['/opt/conda/bin/bash', '-euo', 'pipefail']
}

// Docker configuration
docker {
    enabled = true
    runOptions = "--memory-swap -1 -u \$(id -u):\$(id -g)"
}

// Profiles for different environments
profiles {
    standard {
        docker.enabled = true
        cleanup = true
    }
}
